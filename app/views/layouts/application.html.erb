<!DOCTYPE html>
<html>
<head>
  <title>Danebook</title>

  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' %>

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js' %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>

  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
</head>
<body data-no-turbolink>

  <% if current_user %>
    <%= render partial: "shared/signed_in_navbar" %>
  <% else %>
    <div id="home">
      <%= render partial: "shared/signed_out_navbar" %>
    </div>
  <% end -%>

  <div class="container">
    <%= flash_messages %>
  </div>

    <%= yield %>

</body>
</html>
