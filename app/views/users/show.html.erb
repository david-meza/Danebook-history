<main class = "container">

  <%= render :partial => 'shared/middle_navbar' %>

  <section id="about-section">
    <header>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <h2>About</h2>
        </div>
        <div class="col-xs-2">
          <%= link_to edit_profile_path do %>
            <button class= "btn btn-active", id= "edit-profile">
              Edit Your Profile
            </button>
          <% end if current_user == @user %>
        </div>
      </div>
    </header>


    <div class="row about-info">
      <div class="col-sm-5 col-sm-offset-1">
        <h3>Basic Information</h3>

        <div class="row">
          <div class = "col-xs-4">
            <b>Birthday:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.birthday ? @user.birthday.to_formatted_s(:long) : "No birthday provided" %>
          </div>
        </div>

        <div class="row">
          <div class = "col-xs-4">
            <b>College:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.profile.college ? @user.profile.college : "No college provided" %>
          </div>
        </div>

        <div class="row">
          <div class = "col-xs-4">
            <b>Hometown:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.profile.hometown ? @user.profile.hometown : "No hometown provided" %>
          </div>
        </div>

        <div class="row">
          <div class = "col-xs-4">
            <b>Currently Lives:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.profile.current_home ? @user.profile.current_home : "No current home information" %>
          </div>
        </div>


        <h3>Contact Information</h3>

        <div class="row">
          <div class = "col-xs-4">
            <b>Email:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.email %>
          </div>
        </div>

        <div class="row">
          <div class = "col-xs-4">
            <b>Telephone:</b>
          </div>
          <div class = "col-xs-8">
            <%= @user.profile.mobile ? @user.profile.mobile : "No mobile information" %>
          </div>
        </div>

      </div>

      <div class="col-sm-5">

        <h3>Words to live by</h3>
        <p>
          <%= @user.profile.summary ? @user.profile.summary : "Share some corny quote that makes your ears tingle every time you hear it" %>
        </p>

        <h3>About me</h3>
        <p>
          <%= @user.profile.about ? @user.profile.about : "Share how awesome you are with the world!" %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-2 col-xs-push-10">
        <%= link_to "Modify Account", edit_user_path(@user), class: "btn btn-warning" if current_user == @user %>
      </div>
    </div>
    <br>
  </section>
</main>

<br>
