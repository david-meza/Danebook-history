<!--  Posted posts -->
<% @posts.each do |post| %>
  <article class = "feed-posts">
    <div class="row">
      <div class="col-xs-2">
        <%= profile_pic_or_generic(post) %>
      </div>
      <div class="col-xs-10">
        <p>
          <%= link_to post.author.name, post.author %>
        </p>
        <p class="date-posted">
          Posted on <%= post.created_at.to_formatted_s(:long) %>
        </p>
      </div>
    </div>

    <div class = "row">
      <div class="col-md-12 post-body">
        <p>
          <%= post.body %>
        </p>
      </div>
    </div>

    <div class = "row">
      <footer class="col-md-12 like-section">
        <div class = "row">
          <%= like_or_unlike_button(post) %>
          <a class="col-xs-2" href="#">Comment</a>
          <%= link_to "Delete", post_path(post), method: :delete, class: "col-xs-1 col-xs-offset-6", data: {confirm: "Are you sure you want to delete this post?"} if current_user == @user %>
        </div>

        <div class = "row">
          <p class="col-xs-12">
            <%= likes_count_message(post) %>
          </p>
        </div>

        <div class = "divider-line"></div>

        <%= render partial: 'post_comments', locals: {post: post} %>

        <%= render partial: 'comment_form', locals: {post: post} %>

      </footer>
    </div>
  </article>
<% end -%><!-- Posted posts end-->