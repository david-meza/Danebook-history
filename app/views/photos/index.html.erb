<main class = "container">

  <%= render :partial => 'shared/middle_navbar', locals: {:@user => @user}  %>


  <section id="photos-section">
    <header>
      <div class="row">
        <div class="col-xs-offset-2 col-xs-8">
          <h2>Photos</h2>
        </div>
        <div class="col-xs-2">
          <%= link_to "Add Photo!", new_photo_path, class: "btn btn-primary" if @user == current_user %>
        </div>
      </div>
    </header>

    <div class = "photo-row">
      <% @photos.each do |photo| %>
        <div class="col-md-3 col-xs-6 photo">
          <%= link_to photo_path(photo) do %>
            <%= image_tag photo.photo.url(:medium) %>
          <% end -%>
          <div class="upload-date">
            <p>Uploaded <%= photo.photo_updated_at.to_formatted_s(:long) %></p>
          </div>
        </div>
      <% end -%>

      <% if @photos.empty? %>
      <div class="col-md-12 text-center">
        <h3>This user doesn't have any pictures yet :(</h3>
      </div>
      <% end -%>

    <div class = "clearfix"></div>
  </section>
</main>

<br>