<main class = "container">

  <section id="photo-upload">
    <header>
      <div class="row">
        <div class="col-xs-12">
          <h2>Photos</h2>
        </div>
      </div>
    </header>

    <%=  form_for @photo do |photo_fields| %>

      <div class = "row">
        <div class="col-md-4 col-md-offset-1 text-center">

          <div class="row">
            <div class="col-xs-12">
              <h4>Post the URL to a photo on the web</h4>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <%= photo_fields.text_field :img_url, class: "form-control", placeholder: "https://www.example.com/picture.png" %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <%= photo_fields.submit "Use Web Photo", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>

        <div class="col-md-1 col-md-offset-1">
          <div class="row">
            <div class="col-xs-12">
              <h4>or...</h4>
            </div>
          </div>
        </div>

        <div class="col-md-4 text-center">

          <div class="row">
            <div class="col-xs-12">
              <h4>Select a photo from your hard drive!</h4>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <%= photo_fields.file_field :photo, class: "form-control btn" %>

              <%= photo_fields.submit "Upload Photo!", class: "btn btn-success btn-lg" %>
            </div>
          </div>
        <% end -%>

      </div>
    </div>

  </section>
</main>

<br>